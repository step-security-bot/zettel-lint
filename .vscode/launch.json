  "version": "0.2.0",
  "configurations": [
    {
      "type": "PowerShell",
      "request": "launch",
      "name": "index journal",
      "script": "${workspaceRoot}/local-scripts/journal-index.ps1",
      "cwd": "${workspaceRoot}/local-scripts/",
      "preLaunchTask": "npm: create"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/lib/zl.js"
    },
    {
      "command": "npm run-script zl -- index -v -i \"node_modules/**\" -r references.md --show-orphans",
      "name": "Test Index",
      "request": "launch",
      "type": "node-terminal",
      "cwd":"${workspaceFolder}"
    },
    {
      "command": "npm run-script create",
      "name": "create",
      "request": "launch",
      "type": "node-terminal",
      "cwd":"${workspaceFolder}"
    }            
  ]
}